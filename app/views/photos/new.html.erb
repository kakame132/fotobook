
  <div class="container-fluid">
    <div class="navbar row py-1" style="background-color: #3C5999;" >
            <div class="col-2 col-sm-3 col-md-2 text-right">
                <a class="text-white ml-1" style="font-size:20px" href="">Fotobook</a>
            </div>
            <div class="col-6 col-sm-6 col-md-6">
                <input class="rounded border-light w-75" name="search_bar" id="search_bar" type="text" placeholder="Search Photo / Album"></input>
            </div>
            <div class="col-4 row col-sm-3 col-md-4 pl-5 text-right pr-5"style="height:40px" >
              <div class="col-md-7 col-12">
                <a class="btn rounded-circle bg-white text-color border-0 px-2" href=<%= user_path(current_user.id)%>><%=User.find(current_user.id).last_name[0]%><%=User.find(current_user.id).first_name[0]%></a>
                <a class="btn border-0 text-white hidden-xs" href=<%= user_path(current_user.id)%>><%=User.find(current_user.id).first_name%> </a>
              </div>
              <div class=" col-md-5 text-center hidden-xs justify-content-center">
                <%= link_to "Logout", destroy_user_session_path, {class: "nav-item nav-link btn border-0 text-white", method: "delete"}%>
              </div>
            </div>
        </div>
      <div class="row p-3 justify-content-center" style="background-color:#F8F8F8">
        <div class="col-2 pt-4 align-items-center">
          <div class="row col ml-2">
            <a class="btn text-secondary" href="feed.html" style="font-size:20px" >Feeds</a>
          </div>
          <div class="row col ml-2">
            <a class="btn text-secondary" href="#" style="font-size:20px" >Discover</a>
          </div>
        </div>
      <div class="col-9 p-3">
        <div class="col bg-white pb-3 mb-5">

          <div class="font-weight-bold border-bottom py-4" style="font-size:20px;">New Photo</div>
          <%= form_for @photo,html: { :multipart => true } do |f| %>
          <div class="row">
            <div class="col px-4">
              <div class="form-group-vertical mt-4">
                <%= f.label :title %>
                <%= f.text_field :title, placeholder: "Photo Title", class:"form-control col-11" %>
              </div>
              <div class="form-group-vertical my-4">
                  <%= f.label :public, "Sharing mode" %> <br/>
                  <%= f.select(:public, [['Public',true], ['Private',false]], {}, { :class => 'col-lg-5 col-md-11 custom-select' }) %>
              </div>
            </div>
            <div class="col px-4">
              <div class="form-group-vertical mt-4">
                <%= f.label :description %>
                <%= f.text_field :description, placeholder: "Photo Description", class:"form-control" %>
              </div>
            </div>
          </div>
          <div class="row mx-2 my-3">
            <div class="form-group-vertical border-dash border rounded justify-content-center p-0" style="height:200px; width:200px;background-image: url('https://png.pngtree.com/png-clipart/20190516/original/pngtree-vector-plus-icon-png-image_4272692.jpg');background-size:cover">
              <!-- <label for="new_album"></label>
              <input type="file" name="new_album" class="" accept="image/*" style="opacity:0;height:200px;width:200px"/> -->
              <%= f.file_field :image,style:"height:200px;width:200px;opacity:0"%>
            </div>
          </div>

          <div class="row mx-2 my-5">
              <%= f.submit "Save",class:"btn btn-success py-1 px-4"%>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col">
      </div>
    </div>
  </div>

  <%= stylesheet_link_tag "fotobook_style" %>
  <%= javascript_pack_tag 'script'%>
