<div class="container-fluid ">
  <div class="navbar row py-1 fb_background" >
          <div class="col-2 col-sm-3 col-md-2 text-right">
              <a class="text-white ml-1" style="font-size:20px" href="">Fotobook</a>
          </div>
          <div class="col-6 col-sm-6 col-md-6">
              <input class="rounded border-light w-75" name="search_bar" id="search_bar" type="text" placeholder="Search Photo / Album"></input>
          </div>
          <div class="col-4 row col-sm-3 col-md-4 pl-5 text-right pr-5"style="height:40px" >
            <div class="col-md-7 col-12">
              <a class="btn rounded-circle bg-white text-color border-0 px-2" href="my_profile.html"><%=User.find(current_user.id).last_name[0]%><%=User.find(current_user.id).first_name[0]%></a>
              <a class="btn border-0 text-white hidden-xs" href="<%= user_path(current_user.id)%>"><%=User.find(current_user.id).first_name%> </a>
            </div>
            <div class=" col-md-5 text-center hidden-xs justify-content-center">
              <%= link_to "Logout", destroy_user_session_path, {class: "nav-item nav-link btn border-0 text-white", method: "delete"}%>
            </div>
          </div>
      </div>
    <div class="row p-3 justify-content-center" style="background-color:#F8F8F8">
      <div class="col-2  pt-4 align-items-center">
        <div class="row col ml-2">
          <a class="btn text-secondary head_font" href="feed.html" >Feeds</a>
        </div>
        <div class="row col ml-2">
          <a class="btn text-secondary head_font" href="#" >Discover</a>
        </div>
      </div>
      <div class="col-12 col-md-9 p-0 d-flex justify-content-center">
        <div class="col-12 bg-white pb-3 mb-5 px-0 row">

          <div class="font-weight-bold border-bottom py-4 col-12" style="font-size:20px">
              Edit User Profile<%= resource_name.to_s.humanize %>
          </div>

          <div class="row col-12 justify-content-center">
            <div class="row col-12 col-md-8 justify-content-center">
              <div class="row col-12 justify-content-center">
                <div class="col-12 col-md-8 d-flex justify-content-center">
                  <div class="row mt-5 mb-3 col-12 col-md-6 square_photo justify-content-center" name="profile-image">
                    <img src="photo/dilinh.jpeg" alt="profile-image" class="img-fluid square_photo rounded">
                    <button type="button" name="change-profile" class="btn bg-white text-secondary position-absolute change_button" style="bottom:0">CHANGE</button>
                  </div>
                </div>
              </div>
              <div class="col-12 pt-3 row  text-color justify-content-center my-2 font-weight-bold">
                <div class="col-8 fb_color d-flex justify-content-center">Basic Information</div>
              </div>
              <div class="col-12 pb-5 px-0">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group mb-0 mx-2 row col-12">
                <%= f.label :Firstname,class:"col-8 col-md-4 text-right py-2"%><br />
                <%= f.text_field :first_name,class:"form-control col-12 col-md-8", autocomplete: "first_name",placeholder:"First Name" %>
              </div>
              <div class="form-group mb-0 mx-2 row col-12">
                <%= f.label :Lastname,class:"col-8 col-md-4 text-right py-2"%><br />
                <%= f.text_field :last_name,class:"form-control col-12 col-md-8", autocomplete: "first_name",placeholder:"Last Name" %>
              </div>
              <div class="form-group mb-0 mx-2 row col-12">
                <%= f.label :email,class:"col-7 col-md-4 text-right py-2" %><br />
                <%= f.email_field :email,class:"form-control col-12 col-md-8", autofocus: true, autocomplete: "email" %>
              </div>
              <div class=" actions form-group row col mx-2 d-flex justify-content-center pt-3">
                <%= f.submit "Update",class:"btn add px-3 bg-success" %>
              </div>

            </div>

            <div class="col-12 pt-3 mt-5 row text-color justify-content-center my-2 font-weight-bold">
              <div class="col-8 fb_color d-flex justify-content-center">Password</div>
            </div>
            <div class="col-12 pb-5 px-0">

            <div class="form-group mb-0 mx-2 row col-12">
              <%= f.label :current_password,class:"col-9 col-md-4 text-right py-2" %>
              <%= f.password_field :current_password,class:"form-control col-12 col-md-8", autocomplete: "current-password",placeholder:"********" %>
            </div>
            <div class="form-group mb-0 mx-2 row col-12">
              <%= f.label :password,class:"col-9 col-md-4 text-right py-2" %>
              <%= f.password_field :password,class:"form-control col-12 col-md-8", autocomplete: "new-password",placeholder:"********" %>
            </div>
            <div class="form-group mb-0 mx-2 row col-12">
              <%= f.label :password_confirmation,class:"col-10 col-md-4 text-right py-2" %><br />
              <%= f.password_field :password_confirmation,class:"form-control col-12 col-md-8", autocomplete: "new-password",placeholder:"********" %>
            </div>
            <div class=" actions form-group row col mx-2 d-flex justify-content-center pt-3">
              <%= f.submit "Update",class:"btn add px-3 bg-success" %>
            </div>
            <%end%>
            </div>
          </div>


            </div>
          </div>




        </div>
        <div class="col">
        </div>
      </div>
      </div>



  <div id="modal-photo" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header border-0">
          <p class="modal-title font-weight-bold" id="modal-photo-title"></p>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body my-n1 py-0">
          <img src="" class="img" id="modal-photo-body" style="width:100%"/>
          <p id="modal-photo-description" style="font-size:10px" class="pt-2"></p>
        </div>
      </div>
    </div>
  </div>

  <div id="modal-album" class="modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header border-0">
            <p class="modal-title font-weight-bold" id="modal-album-title"></p>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body my-n1 py-0">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="photo/batman.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="photo/batman.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="photo/batman.jpg" class="d-block w-100" alt="...">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <p id="modal-album-description" style="font-size:10px" class="pt-2"></p>
          </div>
        </div>

      </div>
    </div>
    <%= stylesheet_link_tag "fotobook_style" %>
    <%= javascript_pack_tag 'script'%>
