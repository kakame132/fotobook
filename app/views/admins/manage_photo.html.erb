<div class="container-fluid">
    <div class="navbar row py-1" style="background-color: #3C5999;" >
            <div class="col-2 col-sm-3 col-md-2 text-right">
                <a class="text-white ml-1" style="font-size:20px" href="">Fotobook</a>
            </div>
            <div class="col-6 col-sm-6 col-md-6">
                <input class="rounded border-light w-75" name="search_bar" id="search_bar" type="text" placeholder="Search Photo / Album"></input>
            </div>
            <div class="col-4 row col-sm-3 col-md-4 pl-5 text-right pr-5"style="height:40px" >
              <div class="col-md-7 col-12">
                <a class="btn rounded-circle bg-white text-color border-0 px-2" href="my_profile.html"><%=current_user.last_name[0]%><%=current_user.first_name[0]%></a>
                <a class="btn border-0 text-white hidden-xs" href="#"><%=current_user.first_name%> </a>
              </div>
              <div class=" col-md-5 text-center hidden-xs justify-content-center">
                <%= link_to "Logout", destroy_user_session_path, {class: "nav-item nav-link btn border-0 text-white", method: "delete"}%>
              </div>
            </div>
        </div>
      <div class="row grey_background  px-3">
        <div class="col-2  mt-3 pt-4 align-items-center ">
          <div class="row col  ml-2">
            <a class="btn font-size text-color font-weight-bold fb_color" href="<%=admin_manage_photo_path(current_user.id)%>">Manage Photos</a>
          </div>
          <div class="row col ml-2">
            <a class="btn text-secondary font-size font-weight-bold" href="<%=admin_manage_album_path(current_user.id)%>">Manage Albums</a>
          </div>
          <div class="row col ml-2">
            <a class="btn text-secondary font-size font-weight-bold" href="<%=admin_manage_user_path(current_user.id)%>">Manage Users</a>
          </div>
        </div>
        <div class="col-9 p-3 mt-3">
          <div class="row bg-white row" style="height:700px">

            <%@p.each do |i|%>
            <div class="row col-2 mx-5 square_photo">
                <div class="d-flex justify-content-center">
                  <div class="row justify-content-center photo_edit">
                    <div class="col-10 admin_photo_title">
                      <span id="photo_title"><%=i.title%></span>
                    </div>
                    <a class="btn col-2 d-flex far fa-edit" href="<%=edit_photo_path(i.id)%>" ></a>
                    <!-- <i ="fad fa-edit" ></i> -->
                  </div>
                  <img src="<%=i.image_url(:thumb)%>" alt="" class="img-fluid square_photo">
                </div>
          </div>
          <%end%>
        </div>
            <div class="row footer justify-content-center align-items-end col pt-0">
              <nav>
                <ul class="pagination ">
                  <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
              </nav>
            </div>


      </div>
      <div class="col-1">
      </div>
    </div>
    <script src="https://kit.fontawesome.com/3dc3c39fce.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag "fotobook_style" %>
    <%= javascript_pack_tag 'script'%>
