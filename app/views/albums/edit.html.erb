<div class="container-fluid">
    <div class="navbar row py-1" style="background-color: #3C5999;" >
            <div class="col-2 col-sm-3 col-md-2 text-right">
                <a class="text-white ml-1" style="font-size:20px" href="">Fotobook</a>
            </div>
            <div class="col-6 col-sm-6 col-md-6">
                <input class="rounded border-light w-75" name="search_bar" id="search_bar" type="text" placeholder="Search Photo / Album"></input>
            </div>
            <div class="col-4 row col-sm-3 col-md-4 pl-5 text-right pr-5"style="height:40px" >
              <div class="col-md-7 col-12">
                <a class="btn rounded-circle bg-white text-color border-0 px-2" href=<%= user_path(current_user.id)%>><%=User.find(current_user.id).last_name[0]%><%=User.find(current_user.id).first_name[0]%></a>
                <a class="btn border-0 text-white hidden-xs" href=<%= user_path(current_user.id)%>><%=User.find(current_user.id).first_name%> </a>
              </div>
              <div class=" col-md-5 text-center hidden-xs justify-content-center">
                <%= link_to "Logout", destroy_user_session_path, {class: "nav-item nav-link btn border-0 text-white", method: "delete"}%>
              </div>
            </div>
        </div>
      <div class="row p-3 justify-content-center grey_background">
        <%if current_user.admin == false%>
        <div class="col-2  pt-4 align-items-center">
          <div class="row col ml-2">
            <a class="btn text-secondary head_font" href="feed.html" >Feeds</a>
          </div>
          <div class="row col ml-2">
            <a class="btn text-secondary head_font" href="#" >Discover</a>
          </div>
        </div>
        <%else%>
        <div class="col-2 pt-4 align-items-center ">
          <div class="row col  ml-2">
            <a class="btn text-secondary font-size font-weight-bold"  href="<%=admin_manage_photo_path(current_user.id)%>">Manage Photos</a>
          </div>
          <div class="row col ml-2">
            <a class="btn font-size text-color font-weight-bold fb_color" href="<%=admin_manage_album_path(current_user.id)%>">Manage Albums</a>
          </div>
          <div class="row col ml-2">
            <a class="btn text-secondary font-size font-weight-bold" href="<%=admin_manage_user_path(current_user.id)%>">Manage Users</a>
          </div>
        </div>
        <%end%>
      <div class="col-12 col-md-9 p-3">
        <div class="col bg-white pb-3 mb-5">
          <%= form_for @photo, url: album_path, method: :put do |f| %>
          <div class="col-12 justify-content-between row">
              <div class="col-4 font-weight-bold border-bottom py-4 head_font"><span>Edit Album</span></div>

              <div class="col-2 justify-content-center">
                <!-- <button type="button" name="back" class="mt-3 ml-5 btn bg-primary px-4 text-white">Back</button> -->
                <%if current_user.admin == true%>
                  <a class="mt-3 ml-5 btn bg-primary px-4 text-white" href="<%=admin_manage_album_path(current_user.id)%>" >Back</a>
                <%else%>
                  <a class="mt-3 ml-5 btn bg-primary px-4 text-white" href="<%=user_path(current_user.id)%>" >Back</a>
                <%end%>
              </div>

          </div>
          <div class="row">
            <div class="col-12 col-md px-4">
              <div class="form-group-vertical mt-4">
                <!-- <input type="text" name="title" placeholder="asdasdasdasdasdasdasdasdsadasdasdasdsad" class="form-control col-11"> -->
                <%= f.label :title %><br>
                <%= f.text_field :title ,{class:"form-control col-11",value:@album.title} %>
              </div>
              <div class="form-group-vertical my-4">
                <%= f.label :public, "Sharing mode" %> <br/>
                <%= f.select(:public, [['Public',true], ['Private',false]], {}, { :class => 'col-lg-5 col-md-11 custom-select' }) %>
              </div>
            </div>
            <div class="col px-4">
              <div class="form-group-vertical mt-4">
                <%= f.label :description %><br>
                <%= f.text_area :description ,{class:"form-control",value:@album.description}%>
              </div>
            </div>
          </div>
          <div class="row mx-2 my-3">
            <%@album.photos.each do |i|%>
            <div class="col col-md-2 mx-3 px-0 d-flex justify-content-center">
              <img src="<%=i.image_url(:thumb)%>" alt="" class="img-fluid">
              <!-- <img class="close" src="https://www.pinclipart.com/picdir/big/35-356107_close-button-icon-png-clipart.png"/> -->
              <%=link_to "X", photo_path(i.id)  , {class: "btn p-0 close",style:"color:black;", method: "delete"}%>
            </div>
            <%end%>
            <div class="form-group-vertical border-dash border rounded justify-content-center p-0" style="height:200px; width:200px;background-image: url('https://png.pngtree.com/png-clipart/20190516/original/pngtree-vector-plus-icon-png-image_4272692.jpg');background-size:cover">
              <!-- <label for="new_album"></label>
              <input type="file" name="new_album" class="" accept="image/*" style="opacity:0;height:200px;width:200px"/> -->
              <%= f.file_field :image,style:"height:200px;width:200px;opacity:0"%>
            </div>
          </div>
          <div class="row mx-2 my-5">
            <%= f.submit "Save",class:"btn btn-success py-1 px-4"%>
            <%= link_to "Delete", album_path(@album.id) , {data: { confirm: 'Are you sure?' },class: "btn bg-danger ml-5 px-4 text-white", method: "delete"}%>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col">
      </div>
    </div>
  </div>
  <%= stylesheet_link_tag "fotobook_style" %>
  <%= javascript_pack_tag 'script'%>
